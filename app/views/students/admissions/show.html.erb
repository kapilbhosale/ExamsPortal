          </div>
          <div class="form-group">
            <select id="batch" class="form-control" name="batch">
              <% if @student.present? %>
                <option value="12th">12th</option>
              <% else %>
                <option id="12th_set" value="12th_set"> "** Repeater SET 2023-24 **" </option>
                <option id="11th_new" value="11th_new"> 11th Regular Batch (2023-2024) </option>
                <option id="12th" value="12th"> 12th Regular Batch (2023-2024) </option>
                <option id="repeater" value="repeater"> REPEATER 2023-24 </option>
              <% end %>
            </select>
          </div>
        </div>

        <div style="background-color:azure; padding: 10px">
          <div>
            <% if @student.present? %>
              <p style="color: gray;">BUY new course or Pay installment: </p>
            <% else %>
              <p style="color: gray;">Course Selection:
                <span id="neet-saarthi" style="color: green; font-size: 12px; display: none">[RCC REPEATER NEET SET is for PCB]</span>
              </p>
            <% end %>
          </div>
          <div id="course-selection" class="form-group course-ned-ltr" style="text-align: center;">
            <div id="pcb" class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="course[]" value="pcb">
              <label class="form-check-label" for="inlineRadio2">PCB</label>
            </div>
            <div id="pcm" class="form-check form-check-inline">
