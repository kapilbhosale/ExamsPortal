<div class="row">
  <div class="col col-login mx-auto">
    <div class="text-center mb-6">
    </div>
    <%= form_for(resource, as: resource_name,html:{class:'card'}, url: session_path(resource_name)) do |f| %>
    <div class="card-body p-6">
      <div class="card-title">Login to your account</div>
      <div class="form-group">
        <label class="form-label">Email</label>
        <div class="input-icon">
          <span class="input-icon-addon">
            <i class="fe fe-user"></i>
          </span>
          <%= f.email_field :email, placeholder:'Email or Username...', class:'form-control', autofocus: true, autocomplete:'email' %>
        </div>
      </div>
      <div class="form-group">
        <label class="form-label">
          Password
          <a href="password/new" class="float-right small">I forgot password</a>
        </label>
        <div class="input-icon">
          <span class="input-icon-addon">
            <i class="fe fe-lock"></i>
          </span>
          <%= f.password_field :password, autocomplete:'off', placeholder:'Password...', class:'form-control' %>
        </div>
      </div>
      <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <label class="custom-control custom-checkbox">
          <%= f.check_box :remember_me %>
          <span class="label">Remember me</span>
        </label>
      </div>
      <% end -%>
      <div class="form-footer">
        <%= f.submit "Log in", class:'btn btn-primary btn-block' %>

        <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, style:"color:red;margin-top:2%;", :id => "flash_#{name}" if msg.is_a?(String) %>
        <%- end -%>
      </div>
    </div>
    <% end %>
    <div class="text-center text-muted">
      Don't have account yet? <a href="./sign_up">Sign up</a>
    </div>
  </div>
</div>
