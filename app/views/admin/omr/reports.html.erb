
<div class="row omr-report">
  <div class="col-lg-12" style="background-color: white; border-radius: 10px; padding-bottom: 20px">
    <p style="text-align: center;">OMR Reports Section</p>

    <div class="col-lg-3">
      <%= link_to students_list_admin_omr_index_path, class: "text-decoration-none text-dark" do %>
        <div class="card" style="transition: background-color 0.3s ease;">
          <div class="card-body">
            <h5 class="card-title">Student Progress Report</h5>
            <h6 class="card-subtitle mb-2 text-muted">Detailed Progress report with Graph</h6>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-lg-3">
      <%= link_to tests_list_admin_omr_index_path, class: "text-decoration-none text-dark" do %>
        <div class="card" style="transition: background-color 0.3s ease;">
          <div class="card-body">
            <h5 class="card-title">Test Report</h5>
            <h6 class="card-subtitle mb-2 text-muted">Complete Test report of all students.</h6>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-lg-3">
      <%= link_to tests_list_avg_admin_omr_index_path, class: "text-decoration-none text-dark" do %>
        <div class="card" style="transition: background-color 0.3s ease;">
          <div class="card-body">
            <h5 class="card-title">Average Report</h5>
            <h6 class="card-subtitle mb-2 text-muted">Average report for selected tests.</h6>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>

<style>
  .omr-report .card:hover {
    background-color: #b9d6ff;
    cursor: pointer;
  }
  .text-decoration-none:hover {
    text-decoration: none !important;
  }
</style>