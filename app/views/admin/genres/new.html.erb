<div class="row card">
  <div class="col-lg-8">
    <%= form_tag(admin_genres_path, method: :post) do %>
      <div class="card-body">
        <h3 class="card-title">Add Genre</h3>

        <div class="form-group" style="padding: 15px; margin-bottom: 25px;">
          <label class="control-label col-sm-2" for="name">Name</label>
          <div class="col-sm-8">
            <input type="text" class="form-control" placeholder="Enter genre name" name="name" required>
          </div>
        </div>
      </div>
      <div class="text-center" style="padding: 25px; margin-bottom: 20px;">
        <input type="submit" class="btn btn-primary" />
      </div>
    <% end %>
  </div>
</div>
