<div class="row">
  <div class="col-lg-8">
    <%= form_for :batch_group, url: admin_batch_groups_path, html: {class: 'card'} do  |form| %>
      <div class="card-body">
        <h3 class="card-title">Add Batch group</h3>
        <div class="row">
          <div class="col-sm-12 col-md-12">
            <div class="form-group">
              <label class="form-label">Batch Group Name</label>
              <%= form.text_field :name, class: 'form-control', placeholder: 'Name', required: true %>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-group">
              <% if @batch_group.errors.any? %>
                <div class="error-msg">
                  <h6>
                    <%= pluralize(@batch_group.errors.count, "error") %> prohibited this Batch Group from being saved:
                  </h6>
                  <ul>
                    <% @batch_group.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer text-right">
        <%= link_to "Cancel", admin_batch_groups_path, class: 'btn btn-primary' %> &nbsp;&nbsp;
        <button type="submit" class="btn btn-success">Add Batch Group</button>
      </div>
    <% end %>
  </div>
</div>
