<div class="col-12 mt-4">
  <div class="card border-0">
    <div class="card-headerborder-0">
      <div style="text-align: center">
        Attendance Report
      </div>
      <div>
        Student Roll Number: <%= @student.roll_number %>
      </div>
      <div>
        Student Name: <%= @student.name %>
      </div>
      <div>
        Batch: <%= @student.batches.pluck(:name).join(', ') %>
      </div>
      <div>
        <% batch = @student.batches.where.not(start_time: nil)&.first %>
        Batch Timming: <%= "#{batch.start_time.strftime('%I:%M%p')} - #{batch.end_time.strftime('%I:%M%p')}" %>
      </div>
    </div>
      <table class="table table-striped table-vcenter text-nowrap">
        <thead>
          <tr>
            <th>Sr. NO</th>
            <th>Date</th>
            <th>Status</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
  </div>
</div>
