<div class="row" >
  <div class="col-lg-8" style="background-color:rgb(222, 222, 222); ">
    <%= form_tag(admin_notifications_path, method: :post) do %>
      <div class="card-body">
        <h3 class="card-title">Add New Notification</h3>

        <div class="form-group">
          <input type="text" class="form-control" name="title" id="examName" placeholder="Enter title" required>
        </div>

        <div class="form-group">
          <input type="text" class="form-control" name="description" id="examName" placeholder="Enter description" required>
        </div>

        <div class="form-group">
          <% @batches.each do |batch| %>
            <label class="checkbox-inline"><input name="batches[]" type="checkbox" value=<%= batch.id %>><%= batch.name %></label>
          <% end %>
        </div>

        <input type="submit" class="btn btn-primary pull-right" />
      </div>

    <% end %>
  </div>
</div>