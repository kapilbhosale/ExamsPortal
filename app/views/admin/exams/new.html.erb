<div class="container">
  <h4>Add New Exam</h4>
  <hr>
  <%= form_tag '/admin/exams', method: :post, class: 'form-horizontal', multipart: true do %>
    <div class="form-group">
      <label class="control-label col-sm-2" for="name">Name:</label>
      <div class="col-sm-6">
        <input type="text" class="form-control" id="name" placeholder="Exam Name" name="name">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Description:</label>
      <div class="col-sm-6">
        <textarea style="width: 100%" class="form-control" name="description" placeholder="Enter description">
        </textarea>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="questions">Number of Questions:</label>
      <div class="col-sm-6">
        <input type="number" class="form-control" id="no_of_questions" placeholder="Number of Questions in exam" name="no_of_questions">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="time_in_minutes">Time in Mins:</label>
      <div class="col-sm-6">
        <input type="number" class="form-control" id="time_in_minutes" placeholder="Time for exam in Minutes" name="time_in_minutes">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="available_from_time">Available from:</label>
      <div class="col-sm-3">
        <input type="datetime-local" class="form-control" id="available_from_time" name="available_from_time">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="questions_zip">questions Zip:</label>
      <div class="col-sm-3">
        <input type="file" class="form-control" id="questions_zip" name="questions_zip">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  <% end %>
</div>
