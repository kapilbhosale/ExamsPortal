<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <div class="col-lg-6 p-3">
          <h5> Available Exams </h5>
        </div>
        <div class="col-lg-6 text-right p-3">
          <a href="<%= new_admin_exam_path %>">
            <button type="button" class="btn-add-exam btn btn-primary pull-right" style="margin-bottom: 10px">Add Exam</button>
          </a>
        </div>
      </div>
      <div class="card-body">
        <table class="table table-striped table-bordered table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Question</th>
        <th>Added Q</th>
        <th>Time</th>
        <th>Added on</th>
        <th>status</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>

      <% if @exams.present? %>
        <% @exams.each_with_index do |exam, index| %>
          <tr>
            <td><%= link_to exam.name, admin_exam_path(exam.id) %></td>
            <td><%= exam.description.first(100) %> ...</td>
            <td><%= exam.no_of_questions %></td>
            <td><%= exam.questions.count rescue 0 %></td>
            <td><%= exam.time_in_minutes %> mins</td>
            <td><%= exam.created_at.to_date %></td>
            <td><%= exam.published %></td>
            <td>
              &nbsp;
              <%= link_to '', '#', 'data-toggle': "modal", 'data-target': '#examModal', class: 'glyphicon glyphicon-pencil'%> &nbsp;
               <%= link_to '', '#', 'data-toggle': "modal", 'data-target': '#examModal', class: 'glyphicon glyphicon-trash'%>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="8" style="text-align: center">No exams found, Add exams </td>
        </tr>
      <% end %>
      </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%= render partial: 'admin/exams/new' %>
