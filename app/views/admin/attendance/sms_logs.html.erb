<div class="row" style="margin-left: -25px">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <div class="col-md-10">
          <h5 class="pt-3">Attendance SMS Logs</h5>
          <p>For last week only</p>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <% if @sms_logs.present? %>
            <table class="table card-table table-striped tabler-hover table-vcenter text-nowrap">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Batch Name</th>
                  <th>Mode</th>
                  <th>Present Count</th>
                  <th>Absent Count</th>
                </tr>
              </thead>
              <tbody>
                <% @sms_logs.each do |sms_log| %>
                  <tr>
                    <td><%= sms_log.created_at.strftime("%d-%b-%Y %I:%M %p") %></td>
                    <td><%= sms_log.batch&.name %></td>
                    <td><%= sms_log.mode %></td>
                    <td><%= sms_log.present_count %></td>
                    <td><%= sms_log.absent_count %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <div class="alert alert-info">No SMS Logs.</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


