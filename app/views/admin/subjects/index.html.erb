<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <div class="col-md-6">
          <h5>Subjects</h5>
        </div>
        <div class="col-md-6 text-right">
          <%= link_to '<i class="glyphicon glyphicon-plus"> </i> Add New Subject'.html_safe, new_admin_subject_path %>
        </div>
      </div>
      <% if @subjects.present? %>
        <div class="table-responsive">
          <table class="table card-table table-vcenter text-nowrap">
            <thead>
              <tr>
                <th class="w-1">No.</th>
                <th>Name</th>
                <th>Created</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @subjects.each do |subject| %>
                <tr>
                  <td>
                    <span class="text-muted"><%= subject.id %></span>
                  </td>
                  <td>
                    <%= link_to subject.name, edit_admin_subject_path(subject) %>
                  </td>
                  <td>
                    <%= subject.created_at.strftime("%d-%B-%Y") %>
                  </td>
                  <td>
                    <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_admin_subject_path(subject), 'data-toggle': 'tooltip', title: 'Edit' %>&nbsp;
                    <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, admin_subject_path(subject), 'data-toggle': 'tooltip', title: 'Delete', method: :delete, data: {confirm: 'Are you sure, You want to delete the Subject, It will delete all Tests and data of the subject. Permanently??'} %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="alert alert-info">No Subjects were found.</div>
      <% end %>
    </div>
  </div>
</div>
