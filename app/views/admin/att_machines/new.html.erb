<div class="row" >
  <div class="col-lg-12" style="background-color: #ffd4d4; ">
    <div class="card-body">
        <%= form_tag(admin_att_machines_path, method: :post, multipart: true) do %>
          <div class="card-body">
            <h3 class="card-title">New Attendance</h3>
            <div class="form-group row">
              <p class="col-md-2">Name of Machine</p>
              <input type="text" class="form-control col-md-8" name="name" id="amount" placeholder="Enter Name" required>
            </div>

            <div class="form-group row">
              <p class="col-md-2">Ip Address</p>
              <input type="text" class="form-control col-md-8" name="ip_address" id="min_payable_amount" placeholder="Enter Ip Address" required>
            </div>

            <input type="submit" class="btn btn-primary pull-right" />
          </div>
        <% end %>
    </div>
  </div>
</div>
