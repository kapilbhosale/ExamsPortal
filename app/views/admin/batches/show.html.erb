<div class="row">
  <div class="col-12">
  </div>
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Input mask</h3>
      </div>
      <div class="card-body">
        <div class="form-group">
          <label class="form-label">Date</label>
          <input type="text" name="field-name" class="form-control" data-mask="00/00/0000" data-mask-clearifnotmatch="true" placeholder="00/00/0000" autocomplete="off" maxlength="10">
        </div>
        <div class="form-group">
          <label class="form-label">Hour</label>
          <input type="text" name="field-name" class="form-control" data-mask="00:00:00" data-mask-clearifnotmatch="true" placeholder="00:00:00" autocomplete="off" maxlength="8">
        </div>
        <div class="form-group">
          <label class="form-label">Date &amp; Hour</label>
          <input type="text" name="field-name" class="form-control" data-mask="00/00/0000 00:00:00" data-mask-clearifnotmatch="true" placeholder="00/00/0000 00:00:00" autocomplete="off" maxlength="19">
        </div>
        <div class="form-group">
          <label class="form-label">ZIP Code</label>
          <input type="text" name="field-name" class="form-control" data-mask="00000-000" data-mask-clearifnotmatch="true" placeholder="00000-000" autocomplete="off" maxlength="9">
        </div>
        <div class="form-group">
          <label class="form-label">Money</label>
          <input type="text" name="field-name" class="form-control" data-mask="000.000.000.000.000,00" data-mask-reverse="true" autocomplete="off" maxlength="22">
        </div>
        <div class="form-group">
          <label class="form-label">Telephone</label>
          <input type="text" name="field-name" class="form-control" data-mask="0000-0000" data-mask-clearifnotmatch="true" placeholder="0000-0000" autocomplete="off" maxlength="9">
        </div>
        <div class="form-group">
          <label class="form-label">Telephone with Code Area</label>
          <input type="text" name="field-name" class="form-control" data-mask="(00) 0000-0000" data-mask-clearifnotmatch="true" autocomplete="off" maxlength="14">
        </div>
        <div class="form-group">
          <label class="form-label">IP Address</label>
          <input type="text" name="field-name" class="form-control" data-mask="099.099.099.099" data-mask-clearifnotmatch="true" placeholder="000.000.000.000" autocomplete="off" maxlength="15">
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-8">
    <%= form_with(model: @batch, local: true, html: {class: 'card'}) do |form| %>
      <div class="card-body">
        <h3 class="card-title">Add Batch</h3>
        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
              <label class="form-label">Batch Id</label>
              <%= form.text_field :id, class: 'form-control', disabled: true %>
            </div>
          </div>
          <div class="col-sm-6 col-md-8">
            <div class="form-group">
              <label class="form-label">Batch Name</label>
              <%= form.text_field :name, class: 'form-control', placeholder: 'Name',value: @batch.name.titlecase, disabled: true %>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer text-right">
        <a href='/batches' class="btn btn-primary">Back</a>
      </div>
    <% end %>
  </div>
</div>
