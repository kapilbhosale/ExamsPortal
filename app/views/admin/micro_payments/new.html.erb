<div class="row" >
  <div class="col-lg-12" style="background-color: #ffd4d4; ">
    <div class="card-body">
        <%= form_tag(admin_micro_payments_path, method: :post, multipart: true) do %>
          <div class="card-body">
            <h3 class="card-title">New Payment Link</h3>
            <div class="form-group row">
              <p class="col-md-2">Payable Amount</p>
              <input type="number" class="form-control col-md-8" name="amount" id="amount" placeholder="Enter Amount" required>
            </div>

            <div class="form-group row">
              <p class="col-md-2">Min Payable Amount</p>
              <input type="number" class="form-control col-md-8" name="min_payable_amount" id="min_payable_amount" placeholder="Enter Min Amount" required>
            </div>

            <div class="form-group">
              <%= render partial: 'admin/select_batches', locals: {var_name: 'batches[]', selected_batches: []} %>
            </div>

            <input type="submit" class="btn btn-primary pull-right" />
          </div>
        <% end %>
    </div>
  </div>
</div>
