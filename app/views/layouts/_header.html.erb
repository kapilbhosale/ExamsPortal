<div class="header py-4">
  <div class="container">
    <div class="d-flex">
      <a class="header-brand" href="./index.html">
        Smart Exams
      </a>
      <div class="d-flex order-lg-2 ml-auto">
        <% if student_signed_in? %>
          <div class="dropdown">
            <a href="#" class="nav-link pr-0 leading-none" data-toggle="dropdown">
              <span class="avatar avatar-user-photo"></span>
              <span class="ml-2 d-none d-lg-block">
                <span class="text-default"><%= current_student.name%></span>
                <small class="text-muted d-block mt-1">Student</small>
              </span>
            </a>
            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
              <a class="dropdown-item" href="/students/home/profile">
                <i class="dropdown-icon fe fe-user"></i> Profile
              </a>
              <a class="dropdown-item" href="#">
                <i class="dropdown-icon fe fe-settings"></i> Settings
              </a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">
                <i class="dropdown-icon fe fe-help-circle"></i> Need help?
              </a>
              <%= link_to '<i class="dropdown-icon fe fe-log-out"></i> Sign Out'.html_safe, destroy_student_session_path, method: :delete, class:"dropdown-item"%>
            </div>
          </div>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Sign In &nbsp; <i class="fa fa-user-o"></i>'.html_safe, new_student_session_path, method: :get, class: 'nav-link' %>
          </li>
        <% end %>
      </div>
      <a href="#" class="header-toggler d-lg-none ml-3 ml-lg-0" data-toggle="collapse" data-target="#headerMenuCollapse">
        <span class="header-toggler-icon"></span>
      </a>
    </div>
  </div>
</div>
<div class="header collapse d-lg-flex p-0" id="headerMenuCollapse">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg order-lg-first">
        <ul class="nav nav-tabs border-0 flex-column flex-lg-row">
          <li class="nav-item">
            <a href="<%= students_tests_path %>" class="nav-link active"><i class="fe fe-monitor"></i> My Exams</a>
          </li>
          <li class="nav-item">
            <a href="/students/mock_tests" class="nav-link"><i class="fe fe-airplay"></i> Mock Tests</a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link"><i class="fe fe-book"></i> Question Bank</a>
          </li>
          <li class="nav-item">
            <a href="<%= students_exam_subscription_path %>" class="nav-link"><i class="fe fe-users"></i> External Students</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
