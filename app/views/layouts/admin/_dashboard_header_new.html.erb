<div class="header py-4">
  <div class="container">
    <div class="d-flex">
      <a class="header-brand" href="/">
      Smart Exams
      </a>
      <% if admin_signed_in? %>
        <div class="d-flex order-lg-2 ml-auto">
          <div class="dropdown">
            <a href="#" class="nav-link pr-0 leading-none" data-toggle="dropdown">
              <span class="avatar avatar-user-photo" ></span>
              <span class="ml-2 d-none d-lg-block">
                <span class="text-default"><%= current_admin.name %></span>
                <small class="text-muted d-block mt-1">Administrator</small>
              </span>
            </a>
            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
              <a class="dropdown-item" href="#">
                <i class="dropdown-icon fe fe-user"></i> Profile
              </a>
              <a class="dropdown-item" href="#">
                <i class="dropdown-icon fe fe-settings"></i> Settings
              </a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#">
                <i class="dropdown-icon fe fe-help-circle"></i> Need help?
              </a>
              <%= link_to '<i class="dropdown-icon fe fe-log-out"></i> Sign Out'.html_safe, destroy_admin_session_path, method: :delete, class:"dropdown-item"%>
            </div>
          </div>
        </div>
      <% end %>
      <a href="#" class="header-toggler d-lg-none ml-3 ml-lg-0" data-toggle="collapse" data-target="#headerMenuCollapse">
        <span class="header-toggler-icon"></span>
      </a>
    </div>
  </div>
</div>
<div class="header collapse d-lg-flex p-0" id="headerMenuCollapse">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg order-lg-first">
        <ul class="nav nav-tabs border-0 flex-column flex-lg-row">
          <li class="nav-item">
            <%= link_to '<i class="fe fe-users"></i> Students'.html_safe, admin_students_path, class: 'nav-link', remote: true %>
          </li>
          <li class="nav-item">
            <%= link_to '<i class="fe fe-list"></i> Batches'.html_safe, admin_batches_path, class: 'nav-link', remote: true %>
          </li>
          <li class="nav-item">
            <%= link_to '<i class="fe fe-bar-chart-2"></i> Reports'.html_safe, admin_reports_path, class: 'nav-link', remote: true %>
          </li>
          <li class="nav-item">
            <%= link_to '<i class="fe fe-monitor"></i> Exams'.html_safe, admin_exams_path, class: 'nav-link active', remote: true %>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link"><i class="fe fe-folder"></i> Question Bank</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $(".nav-item .nav-link").on("click", function(){
      $(".nav-item").find(".active").removeClass("active");
      $(this).addClass("active");
    });
  });
</script>
